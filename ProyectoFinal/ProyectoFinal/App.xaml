<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.App">
    <Application.Resources>
        <Style x:Key="Entry"
       TargetType="Entry">
            <Setter Property="BackgroundColor" Value="#F2F4F7    "/>
        </Style>

        <Style x:Key="btn"
               TargetType="Button">
            <Setter Property="BackgroundColor" Value="#5F85C2   " />
            <Setter Property="CornerRadius" Value="15" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="BorderWidth" Value="3" />
            <Setter Property="BorderColor" Value="#000568 " />
        </Style>

        <Style TargetType="NavigationPage">
            <Setter Property="BarBackgroundColor"  Value="#9CB3D8   "/>
        </Style>
        <Style x:Key="Picker"
               TargetType="Picker">
            <Setter Property="FontAttributes" Value="Italic"/>
            <Setter Property="BackgroundColor" Value="#F2F4F7"/>
            <Setter Property="TextColor" Value="Black"/>
        </Style>
    </Application.Resources>
</Application>