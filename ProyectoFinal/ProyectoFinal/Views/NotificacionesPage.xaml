<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Views.NotificacionesPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="Transparent">
                <Label Text="NOTIFICACIONES" HorizontalTextAlignment="Center" TextColor="#3c72a4" FontSize="40" FontAttributes="Bold,Italic" />
            </Frame>
            <ListView x:Name="notificacionesListView"
                      ItemsSource="{Binding Resultados}"
                      VerticalOptions="FillAndExpand"
                      HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10">
                                <Label Text="{Binding Nombre}" FontAttributes="Bold" />
                                <Label Text="{Binding Descripcion}" />
                                <Label Text="{Binding Fecha}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>